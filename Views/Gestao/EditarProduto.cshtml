@model Sistema_de_supermercado_com_aspnet_core.DTO.ProdutoDTO;

@{
    Layout = "_LayoutAdmin";
}

<h2>Editar Produto</h2>
<hr/>

<form method="POST" asp-controller="Produtos" asp-action="Atualizar">
    <input type="hidden" asp-for="Id">
    
    <label for="Nome">Nome:</label>
    <input class="form-control" asp-for="Nome" type="text" placeholder="Nome do produto">
    <span asp-validation-for="Nome"></span><br>
    
    <label asp-for="CategoriaID">Categoria: </label>
    <select class="form-control" asp-for="CategoriaID" asp-items='@(new SelectList(@ViewBag.Categorias,"Id","Nome"))' ></select>
    <span asp-validation-for="CategoriaID"></span><br>

    <label asp-for="FornecedorID">Categoria: </label>
    <select class="form-control" asp-for="FornecedorID" asp-items='@(new SelectList(@ViewBag.Fornecedores,"Id","Nome"))' ></select>
    <span asp-validation-for="FornecedorID"></span><br>
    
    <label asp-for="PrecoDeVenda">Preço De Venda: </label>
    <input type="number" step="any" class="form-control" asp-for="PrecoDeVenda" placeholder="Preço de Venda">
    <span asp-validation-for="PrecoDeVenda"></span><br>

    <label asp-for="PrecoDeCusto">Preço De Custo: </label>
    <input type="number" step="any" class="form-control" asp-for="PrecoDeCusto" placeholder="Preço de Custo">
    <span asp-validation-for="PrecoDeCusto"></span><br>

    <label asp-for="Medicao">Medicao: </label>
    <select class="form-control" asp-for="Medicao">
        <option value="0">Litro</option>
        <option value="1">Quilo</option>
        <option value="2">Unidade</option>
    </select>

    <br>
    <button class="btn btn-success">Atualizar</button>
</form>