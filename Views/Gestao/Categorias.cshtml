@model IEnumerable<Sistema_de_supermercado_com_aspnet_core.Models.Categoria>
@{
    Layout = "_LayoutAdmin";
}

<h2>Categorias</h2>
<hr>
<a asp-action="NovaCategoria" asp-controller="Gestao" class="btn btn-success" > Criar Nova Categoria </a>
<hr>
<script>
    $(document).ready( function () {
    $('#Categoria').DataTable({
            "language": {
                "lengthMenu": "Mostrando _MENU_ Registro por Página",
                "zeroRecords": "Nada Encontrado - Desculpe",
                "info": "Mostrando Página _PAGE_ of _PAGES_",
                "infoEmpty": "Nenhum registro disponível",
                "search": "Buscar:",
                "paginate": {
                    "first": "Primeiro",
                    "last": "Último",
                    "next": "Próximo",
                    "previous": "Anterior"

                },
                "infoFiltered": "(Filtrado de _MAX_ total de registro)" 
            }
        });
    });
</script>

<table id="Categoria" class="table table-striped table-bordered">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Ações</th>
    </thead>
    <tbody>
    @foreach (var categoria in Model)
    {
        <tr>
            <td>@categoria.Id</td>
            <td>@categoria.Nome</td>
            <td>
                <a class="btn btn-primary" href="/Gestao/EditarCategoria/@categoria.Id" >Editar</a> 
                <form style="display:inline;"  asp-action="Deletar" asp-controller="Categorias">
                    <input type="hidden" name="id" id="id" value="@categoria.Id">
                    <button class="btn btn-danger"> Deletar </button>
                </form>
            </td>
        </tr>
        
    }
    </tbody>
</table>