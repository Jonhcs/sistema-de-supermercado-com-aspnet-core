@model Sistema_de_supermercado_com_aspnet_core.DTO.CategoriaDTO
@{
    Layout = "_LayoutAdmin";
}

<h2>Nova Categorias</h2>
<hr/>
<form class="form-horizontal" asp-action="Salvar" asp-controller="Categorias" method="POST">
    <input type="hidden" asp-for="Id" value="0">
    <label for="Nome">Nome:</label>
    <input class="form-control" asp-for="Nome" type="text" placeholder="Nome da Categoria"><br>
    <span asp-validation-for="Nome"></span>
    <button class="btn btn-success">Cadastrar</button>
</form>