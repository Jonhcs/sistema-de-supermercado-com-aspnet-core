@model IEnumerable<Sistema_de_supermercado_com_aspnet_core.Models.Fornecedor>

@{
    Layout = "_LayoutAdmin";
}

<h2>Fornecedor</h2>
<hr>
<a asp-action="NovoFornecedor" asp-controller="Gestao" class="btn btn-success" > Criar Novo Fornecedor</a>
<hr>

<script>
    $(document).ready( function () {
    $('#Fornecedor').DataTable({
            "language": {
                "lengthMenu": "Mostrando _MENU_ Registro por Página",
                "zeroRecords": "Nada Encontrado - Desculpe",
                "info": "Mostrando Página _PAGE_ of _PAGES_",
                "infoEmpty": "Nenhum registro disponível",
                "search": "Buscar:",
                "paginate": {
                    "first": "Primeiro",
                    "last": "Último",
                    "next": "Próximo",
                    "previous": "Anterior"

                },
                "infoFiltered": "(Filtrado de _MAX_ total de registro)" 
            }
        });
    });
</script>

<table id="Fornecedor" class="table table-striped table-bordered">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Telefone</th>
        <th>Ações</th>
    </thead>
    <tbody>
    @foreach (var fornecedor in Model)
    {
        <tr>
            <td>@fornecedor.Id</td>
            <td>@fornecedor.Nome</td>
            <td>@fornecedor.Email</td>
            <td>@fornecedor.Telefone</td>
            <td>
                <a class="btn btn-primary" href="/Gestao/Editarfornecedor/@fornecedor.Id" >Editar</a> 
                <form style="display:inline;"  asp-action="Deletar" asp-controller="Fornecedor">
                    <input type="hidden" name="id" id="id" value="@fornecedor.Id">
                    <button class="btn btn-danger"> Deletar </button>
                </form>
            </td>
        </tr>
        
    }
    </tbody>
</table>