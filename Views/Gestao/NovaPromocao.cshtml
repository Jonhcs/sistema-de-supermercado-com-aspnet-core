@model Sistema_de_supermercado_com_aspnet_core.DTO.PromocaoDTO
@{
    Layout = "_LayoutAdmin";
}

<h2> Nova Promoção </h2>
<hr/>

<form method="POST" asp-controller="Promocoes" asp-action="Salvar">
    <input type="hidden" asp-for="Id" value="0">
    <label for="Nome">Nome:</label>
    <input class="form-control" asp-for="Nome" type="text" placeholder="Nome dac Promoção">
    <span asp-validation-for="Nome"></span>
    <br>
    <label asp-for="ProdutoID">Produto: </label>
    <select class="form-control" asp-for="ProdutoID" asp-items='@(new SelectList(@ViewBag.Produtos,"Id","Nome"))' ></select>
    <span asp-validation-for="ProdutoID"></span>
    <br>
    <label asp-for="Porcentagem">Porcentagem: </label>
    <input class="form-control" type="number" min="0" max="100" asp-for="Porcentagem" placeholder="Digite a porcentagem de desconto (apenas número de 0 a 100 sem %)">
    <span asp-validation-for="Porcentagem"></span>

    <br>
    <button class="btn btn-success"> Cadastrar </button>
</form>