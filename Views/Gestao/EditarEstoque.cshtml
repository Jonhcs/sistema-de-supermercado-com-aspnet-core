    <span asp-validation-for="ProdutoId"></span><br>

    <label asp-for="Quantidade">Quantidade: </label>
    <input type="number" step="any" class="form-control" asp-for="Quantidade" placeholder="PreÃ§o de Custo">
    <span asp-validation-for="Quantidade"></span><br>
    <br>
    <button class="btn btn-success">Atualizar</button>
</form>