@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Super Mercado </title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</head>
<body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-secondary border-bottom shadow-sm">
      <h5 class="my-0 mr-md-auto text-white font-weight-normal">SUPER MERCADO</h5>
      <nav class="my-2 my-md-0 mr-md-3">
        <a class="p-2 text-white" asp-action="Index" asp-controller="Gestao">GESTÃO</a>
        
      </nav>
    </div>
    <hr>
    <section   class="container w-auto p-3 ">
        <div class="row">
            <div class="col-sm-4">
                <div class="input-group">
                <input type="number" class="form-control" id="CodProduto" placeholder="Código do produto">
                <span class="input-group-btn">
                    <button class="btn btn-success" type="button"  id="pesquisar" >Pesquisar</button>
                </span>
                
                </div>
                <br>
                <h3>Informações</h3>
                <br>
                <form class="form-horizontal" id="prodForm">
                    <label>Nome</label>
                    <input type="text" class="form-control" placeholder="Nome do produto" disabled id="campoNome">
                    <br>
                    <label>Categoria</label>
                    <input type="text" class="form-control" placeholder="Categoria" disabled id="campoCategoria">
                    <br>
                    <label>Fornecedor</label>
                    <input type="text" class="form-control" placeholder="Fornecedor" disabled id="campoFornecedor">
                    <br>
                    <label>Preço de venda</label>
                    <input class="form-control"  type="number" step="any" placeholder="20.50" disabled id="campoPreco" ><br>
                    
                    <label>Quantidade</label>
                    <input class="form-control" type="number" step="any" id="quantidade" placeholder="Quantidade"><br>
                    
                    <button class="btn btn-success" >Confirmar</button>
                </form>

            </div><!--col-4-->
            <div class="col-sm-8">
                <h2>Compras:</h2>
                <hr>
                <table id="compras" class="table table-dark">
                    <thead>
                        <tr>
                        <th scope="col">#ID</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Quantidade</th>
                        <th scope="col">Preço de Venda</th>
                        <th scope="col">Medição</th>
                        <th scope="col">Total</th>
                        <th scope="col">Remover</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div><!--col-8-->
        </div><!--row--> 
    </section>
    <hr>
    <section class="container text-center pt-5">
        <div class="d-inline ">
            <button class="btn btn-success" data-toggle="modal" data-target="#myModal"> Finalizar Compra</button>
        </div>
        <div class="d-inline">
            <button class="btn btn-danger"> Cancelar Compra</button>
        </div>
    </section>

    <!-- The Modal -->
    <div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

        <!-- Modal Header -->
        <div class="modal-header">
            <h4 class="modal-title">Finalizar venda</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <!-- Modal body -->
        <div class="modal-body">
            <h2>Total: R$ <span id="totalVendaFinalizada" ></span></h2>
            <hr>
            <p>Valor pago:</p>
            <input type="number" id="valorPago" placeholder="0.0" class="form-control">
            <p>Troco:</p>
            <input type="number" id="valorTroco" placeholder="" disabled class="form-control">  
        </div>

        <!-- Modal footer -->
        <div class="modal-footer">
            <div id="posvenda">
                <button type="button" id="fecharModal" class="btn btn-primary" data-dismiss="modal">Fechar</button>
            </div>
            <div id="prevenda">
                <button type="button" class="btn btn-success" id="finalizarVendaBTN" >Finalizar venda</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>

        </div>
    </div>
    </div>


<script src="~/js/frente.js"></script>
</body>

</html>
